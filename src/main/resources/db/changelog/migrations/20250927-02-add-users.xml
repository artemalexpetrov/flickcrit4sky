<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1758983476184-1" author="Artem Petrov">
        <sql>
            CREATE TYPE user_role_type AS ENUM ('USER', 'ADMIN');
        </sql>
        <rollback>
            <sql>DROP TYPE user_role_type;</sql>
        </rollback>
    </changeSet>

    <changeSet id="1758983476184-2" author="Artem Petrov">
        <sql>
            CREATE TABLE users (
                id BIGSERIAL NOT NULL ,
                email VARCHAR(255) NOT NULL,
                password VARCHAR(255) NOT NULL,
                roles user_role_type[] NOT NULL DEFAULT '{}',

                CONSTRAINT users_pk PRIMARY KEY (id),
                CONSTRAINT users_email_uc UNIQUE (email)
            );
        </sql>

        <rollback>
            <sql>DROP TABLE users;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>